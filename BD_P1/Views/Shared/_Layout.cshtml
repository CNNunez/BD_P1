<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Carolina Narvaez</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    @*  Header Layout *@
    <div class="jumbotron jumbotron-fixed-top jumbotron-fluid text-center bg-dark text-white" style="margin-bottom:0">
        <h1 class="display-1 text-warning">Challenge</h1>
        <p class="display-4">ForsyteIT Solutions</p>
    </div>


    @* Main Layout *@
    <div class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Home", "Index", new { area = "" }, new { @class = "navbar-brand" })
                @Html.ActionLink("Challenge", "Challenge", new { area = "" }, new { @class = "navbar-brand" })
            </div>
        </div>
    </div>


    @* Footer layout *@
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer class="navbar navbar-fixed-bottom">
            <p>&copy; @DateTime.Now.Year - FSIT Challenge</p>
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
